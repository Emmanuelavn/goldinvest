            const windowHeight = window.innerHeight;
            // Calcule la position verticale du projecteur
            const spotlightY = (scrollY / (document.body.scrollHeight - windowHeight)) * 100;
            spotlight.style.transform = `translateY(${spotlightY}vh)`;
        });

        // Animation d'apparition au d√©filement
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('is-visible');
                }
            });
        }, { threshold: 0.5 }); // L'animation se d√©clenche quand 50% de la section est visible

        document.querySelectorAll('.reveal-section').forEach(el => {
            observer.observe(el);
        });

        // Animation d'entr√©e pour le titre principal
        document.querySelectorAll('.animate-reveal').forEach((el, index) => {
            el.style.setProperty('--animate-duration', '1s');
            setTimeout(() => {
                el.classList.add('animate__animated', 'animate__fadeInUp');
                el.style.opacity = '1';
            }, index * 200);
            el.style.opacity = '0';
        });

